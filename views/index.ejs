<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chess Game</title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"></script>
    <style>
    .chessboard {
        display: grid;
        grid-template-columns: repeat(8, minmax(0, 1fr));
        grid-template-rows: repeat(8, minmax(0, 1fr));
        width: 400px;
        height: 400px;
        transform: rotate(0deg);
        margin: auto;
    }

    .piece.white {
        color: white;
        filter: drop-shadow(0 0 2px rgba(0, 0, 0, 1));
    }

    .piece.black {
        color: black;
    }

    .flipped {
        transform: rotate(180deg);
    }

    .square {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .square.light {
        background-color: #f0d9b5;
    }

    .square.dark {
        background-color: #b58863;
    }

    .piece {
        font-size: 36px;
        cursor: pointer;
    }

    .piece.draggable {
        cursor: grab;
    }

    .dragging {
        opacity: 0.5;
    }

    /* Rotate pieces for black player */
    .flipped .piece {
        transform: rotate(180deg);
    }

    /* Captured pieces container */
    .captured-pieces {
        width: 400px;
        min-height: 50px;
        margin: 10px auto;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 5px;
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
    }

    .captured-piece {
        font-size: 24px;
        opacity: 0.7;
    }
    </style>
</head>
<body>
    <div class="w-full h-screen flex flex-col items-center justify-center bg-zinc-900">
        <!-- Captured white pieces -->
        <div id="capturedWhite" class="captured-pieces"></div>
        
        <!-- Chess board -->
        <div class="chessboard"></div>
        
        <!-- Captured black pieces -->
        <div id="capturedBlack" class="captured-pieces"></div>
    </div>
    <script src="/js/chessgame.js"></script>
</body>
</html>